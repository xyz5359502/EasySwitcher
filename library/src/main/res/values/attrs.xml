<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasySwitcher">
        <attr name="sbOpenBgColor" format="color" /><!--round rect color when opend-->
        <attr name="sbCloseBgColor" format="color" /><!--round rect color when closed-->
        <attr name="sbAnimTime" format="integer" /><!--anim time-->
        <attr name="sbSwitchStatus" format="integer"><!--switcher default state-->
            <enum name="open" value="1" />
            <enum name="close" value="0" />
        </attr>
        <attr name="sbSwitcherColor" format="color" /><!--the color of switcher-->
    </declare-styleable>
</resources>